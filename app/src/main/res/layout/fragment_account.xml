<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/account_header" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="144dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/sharp_account_circle_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/EditFirstNameAndLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/EditUserEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditProfile"
                android:layout_width="333dp"
                android:layout_height="72dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_bacjground_1"
                android:drawableStart="@drawable/baseline_edit_24"
                android:drawablePadding="20dp"
                android:onClick="goToEditProfile"
                android:paddingStart="50dp"
                android:text="Edit Profile"
                android:textAlignment="viewStart"
                android:textSize="25dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="333dp"
                android:layout_height="72dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_bacjground_1"
                android:drawableStart="@drawable/baseline_menu_book_24"
                android:drawablePadding="20dp"
                android:paddingStart="50dp"
                android:text="My Bookings"
                android:textAlignment="viewStart"
                android:textSize="25dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="333dp"
                android:layout_height="72dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_bacjground_1"
                android:drawableStart="@drawable/baseline_credit_card_24"
                android:drawablePadding="20dp"
                android:paddingStart="50dp"
                android:text="Payment History"
                android:textAlignment="viewStart"
                android:textSize="25dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMembership"
                android:layout_width="333dp"
                android:layout_height="72dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/btn_bacjground_1"
                android:drawableStart="@drawable/baseline_card_membership_24"
                android:drawablePadding="20dp"
                android:paddingStart="50dp"
                android:text="Membership"
                android:textAlignment="viewStart"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="Sign out"
                app:backgroundTint="@color/orange" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>