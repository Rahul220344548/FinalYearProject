<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogViewFaq"

    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:id="@+id/dialogMembershipBox"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewFaqQuestion"
            android:background="@color/lightblue"
            android:padding="10dp"
            android:text="How do you change Password?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:drawableLeft="@drawable/baseline_question_answer_24"
            android:drawablePadding="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtViewFaqAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bring comfortable workout clothes, a water bottle, and a towel. Lockers are available for your belongings."
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:shadowColor="#AA000000"

            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/txtViewFaqQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnCloseFaqDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/red"
            android:text="CLOSE"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/dialogMembershipBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtViewFaqAnswer" />




    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>