<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Booking"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/no_booking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have no upcoming bookings"
            android:textSize="14sp"
            android:paddingTop="8dp"/>

        <LinearLayout
            android:id="@+id/booking_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/booking_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yoga Class"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/booking_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: March 5, 2025 - 5:00 PM"
                android:textSize="14sp"
                android:paddingTop="4dp"/>

            <Button
                android:id="@+id/cancel_booking_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cancel Booking"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/book_class_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Book a Class"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>